<GetStartedButton>:
    # @Button
    # dapat digunakan untuk tombol send di screen 2
    text: ''
    color: (0,0,0,0)

    always_release: True
    size_hint: None, None
    width: '323dp'
    height: '70dp'

    pos_hint: {'center_x':.5, 'center_y':.5}

    background_normal: ''
    background_color: (0,0,0,0)

    on_press: root.pressed()
    on_release: root.released()

    FloatLayout:
        size: self.parent.size
        pos: self.parent.pos

        state: self.parent.state
        text: self.parent.text

        Widget: # bg_canvas
            size_hint: None, None
            width: self.parent.width - dp(14)
            height: '64dp'

            pos: self.parent.pos
            pos_hint: {'bottom':1, 'right':1}

            canvas.before:
                Color:
                    rgba: (0,0,0,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(5)]

        Label: # fg_canvas
            id: fg_button

            text: self.parent.text
            font_size: '18sp'
            font_name: './assets/fonts/Quicksand/Quicksand-SemiBold.ttf'

            size_hint: None, None
            width: self.parent.width - dp(11)
            height: '60dp'

            pos: self.parent.pos
            mx: 0
            my: 1
            border_line: 4
            radius: 5
            pos_hint: {'top':self.my, 'x':self.mx}

            mcolor: (239/255, 105/255, 137/255, 1)

            canvas.before:
                # how to make inner line :D

                # bg_canvas as outline
                Color:
                    rgba: (0,0,0,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(self.radius)]

                # main canvas
                Color:
                    rgba: self.mcolor
                RoundedRectangle:
                    size: [self.width-dp(self.border_line), self.height-dp(self.border_line)]
                    pos: [self.x+dp(self.border_line)/2, self.y+dp(self.border_line)/2]
                    radius: [dp(self.radius)-dp(2.5)]

                #Color:
                #    rgba: (0,0,0,1)
                #Line:
                #    width: 1.1
                #    rounded_rectangle: self.x, self.y, self.width, self.height, 5
