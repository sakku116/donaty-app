<BottomNavbarItem@Button>:
    icon: ''

    background_color: (0,0,0,0)
    background_normal: ''

    canvas.before:
        Color:
            rgba: (0,0,0,0 if self.state == 'normal' else .05)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(15)]

    FloatLayout:
        pos: self.parent.pos
        size: self.parent.size

        Image:
            source: root.icon

            pos: self.parent.pos
            pos_hint: {'center_x':.5, 'center_y':.5}

            size_hint: None, None
            width: '32dp'
            height: '32dp'
            allow_stretch: True
