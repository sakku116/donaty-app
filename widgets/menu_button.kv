<MenuButton@Button>:
    # @Button
    size_hint: None, None
    width: '23dp'
    height: '20dp'

    background_normal: ''
    background_color: (0,0,0,0)

    feedback_size: 26

    canvas.after:
        #Color:
        #    rgba: (1,0,0,1)
        #Line:
        #    rectangle: self.x, self.y, self.width, self.height

        Color:
            rgba: (0,0,0,0 if self.state == 'normal' else .05)
        RoundedRectangle:
            size: [self.feedback_size + self.feedback_size/1.2, self.feedback_size + self.feedback_size/1.2]
            pos: [self.center_x - (self.feedback_size + self.feedback_size/1.2)/2, self.center_y - (self.feedback_size + self.feedback_size/1.2)/2]
            radius: [self.feedback_size/3]

    BoxLayout:
        orientation: 'vertical'

        pos: self.parent.pos
        size: self.parent.size

        line_height: 1.9

        Widget:
            canvas.before:
                Color:
                    rgba: (0,0,0,1)
                Rectangle:
                    size: [self.width, self.parent.line_height]
                    pos: [self.x, self.center_y+self.parent.line_height/2]

        Widget:
            canvas.before:
                Color:
                    rgba: (0,0,0,1)
                Rectangle:
                    size: [self.width, self.parent.line_height]
                    pos: [self.x, (self.center_y - self.parent.line_height/2)]

        Widget:
            canvas.before:
                Color:
                    rgba: (0,0,0,1)
                Rectangle:
                    size: [self.width, self.parent.line_height]
                    pos: [self.x, self.y]
