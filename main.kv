#:include screens/first_screen.kv
#:include screens/second_screen.kv

############# UIX #############
#:include widgets/bottom_navbar_item.kv
#:include widgets/donate_card.kv
#:include widgets/getStarted_button.kv
#:include widgets/loginInput_field.kv
#:include widgets/menu_button.kv
#:include widgets/paymtd_label.kv
#:include widgets/popup.kv
#:include widgets/profile_card.kv
#:include widgets/screen_barrier.kv
#:include widgets/search_button.kv
#:include widgets/send_button.kv
#:include widgets/sidebar_item.kv
#:include widgets/signout_btn.kv

<Manager>:
    canvas.before:
        Color:
            rgba: (251, 251, 251, 1) # main background color
        Rectangle:
            size: self.size
            pos: self.pos

    # manager mencakup header untuk kedua screen
    # dan juga sebagai tempat untuk pergantian layout screen 1 dan 2

    GridLayout:
        id: main_container
        cols: 1
        size_hint: None, 1
        width: root.width
        pos_hint: {'right':1}

        # HEADER
        BoxLayout:
            padding: [30, 10, 30, 15]

            size_hint: 1, None
            height: 54

            FloatLayout:

                MenuButton: # 3 line button
                    id: manager_menu_btn
                    pos: self.parent.pos
                    pos_hint: {'center_y':.4}

                    on_release: root.showSidebar()

                # donaty text & logo
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 8

                    pos: self.parent.pos
                    pos_hint: {'center_y':.5, 'center_x':.5}

                    size_hint: None, 1
                    width: self.minimum_width

                    Label:
                        text: 'Donaty'
                        font_size: 30
                        font_name: './assets/fonts/Neuton/Neuton-Regular.ttf'
                        color: (0,0,0,1)

                        # untuk mendapatkan nilai minimum size dari Label
                        size_hint: None, None
                        width: self.texture_size[0]
                        height: self.texture_size[1]

                        pos_hint: {'center_y':.5, 'center_x':.5}

                    Image:
                        source: './assets/donate-heart.png'

                        pos: self.parent.pos
                        pos_hint: {'center_y':.5, 'center_x':.5}

                        size_hint: None, None
                        width: 27
                        height: 27
                        allow_stretch: True

                SearchButton:
                    id: manager_search_btn
                    pos: self.parent.pos
                    pos_hint: {'center_y':.4, 'right':1}

        # CONTENT LAYOUT PLACE
        FloatLayout:
            id: screens_place
            pos: self.parent.pos
            pos_hint: {'right':1}
            size_hint_x: None
            width: self.parent.width

            BoxLayout:
                id: first_screen_place
                pos: self.parent.pos

            BoxLayout:
                id: second_screen_place
                pos: self.parent.pos

    FloatLayout:
        id: sidebar

        pos_hint: {'x':self.myX}
        # 0 for spawned
        # -1 for unspawned
        myX: -1

        size_hint: None, 1
        width: 300

        Button:
            # sebagai sidebar.
            # menggunakan button agar tidak tembus saat areanya di tap

            background_color: (0,0,0,0)
            background_normal: ''

            pos: self.parent.pos

            canvas.before:
                Color:
                    rgb: (252/255, 252/255, 252/255)
                Rectangle:
                    size: self.size
                    pos: self.pos

            GridLayout:
                cols: 1
                size: self.parent.size
                pos: self.parent.pos

                # header
                BoxLayout:
                    orientatio: 'horizontal'
                    size_hint: 1, None
                    height: 65

                    Button:
                        id: close_sidebar_btn

                        background_color: (0,0,0,0 if self.state == 'normal' else .05)
                        background_normal: ''

                        on_release: root.closeSidebar()

                        canvas.before:
                            Color:
                                rgba: (241/255, 241/255, 241/255, .4)
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        BoxLayout:
                            orientation: 'horizontal'
                            padding: 30
                            spacing: 20

                            pos: self.parent.pos

                            size: self.parent.size
                            size_hint: None, 1
                            width: self.minimum_width

                            MenuButton:
                                feedback_size: 0
                                pos_hint: {'center_y':.5}

                            Label:
                                text: "Tutup"
                                font_size: 15
                                color: (0,0,0,1)

                                size_hint: None, None
                                width: self.texture_size[0]
                                height: self.texture_size[1]

                                pos_hint: {'center_y':.5}

                # line separator
                Widget:
                    size_hint: 1, None
                    height: 2

                    canvas.before:
                        Color:
                            rgba: (0,0,0,.4)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                # items container
                BoxLayout:
                    id: sidebar_items_container
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height

            BoxLayout:
                id: sidebar_footer_container
                pos: self.parent.pos

                size_hint: None, None
                width: self.parent.width
                height: 65

    FloatLayout:
        id: popup_place
