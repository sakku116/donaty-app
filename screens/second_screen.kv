<SecondScreen>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: (0,0,0,0)
            Rectangle:
                size: self.size
                pos: self.pos

        ScrollView:
            id: screen2_scrollview

            do_scroll_x: False
            do_scroll_y: True
            #scroll_timeout: 75
            scroll_distance: 60
            effect_cls: 'DampedScrollEffect'

            # ScrollView Container
            FloatLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: page_place.height

                pos: self.parent.pos

                Widget:
                    id: top_scroll_anchor
                    size_hint: 1, None
                    height: 0

                    pos: self.parent.pos
                    pos_hint: {'top':1}

                BoxLayout:
                    id: page_place
                    # spawn sub screen in this class

                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height

                Widget:
                    id: bottom_scroll_anchor
                    size_hint: 1, None
                    height: 0

                    pos: self.parent.pos
                    pos_hint: {'bottom':1}
                
        # bottom Navigation Bar
        FloatLayout:
            size_hint: 1, None
            height: '87dp'

            pos: self.parent.pos
            pos_hint: {'bottom':1}

            canvas.before:
                Color:
                    rgba: (1,1,1,1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Barrier
            Button:
                background_color: (0,0,0,0)
                background_normal: ''

                pos: self.parent.pos
                size: self.parent.size

            BoxLayout:
                orientation: 'horizontal'
                pos: self.parent.pos
                pos_hint: {'top':1}

                padding: [20,0,20,0]

                size_hint_y: None
                height: '72dp'

                BottomNavbarItem:
                    icon: './assets/house.png'

                BottomNavbarItem:
                    icon: './assets/magnify-glass.png'

                BottomNavbarItem:
                    icon: './assets/currency-dollar.png'

                BottomNavbarItem:
                    icon: './assets/user.png'
