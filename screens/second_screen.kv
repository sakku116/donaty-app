<SecondScreen>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: (0,0,0,0)
            Rectangle:
                size: self.size
                pos: self.pos

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            #scroll_timeout: 75
            #effect_cls: 'ScrollEffect'
            
            # ScrollView Container
            BoxLayout: 
                # to center childern widget
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height

                BoxLayout:
                    id: home_container
                    orientation: 'vertical'
                    spacing: 45

                    padding: [30, 20, 30, 10]

                    size_hint: None, None
                    width: self.minimum_width
                    height: self.minimum_height

                    pos_hint: {'center_x':.5}
                    
                    # Donate Card
                    DonateCard:
                        id: donate_card
                        datetime: '00/00/00'
                        creator_name: ''
                        creator_pict: ''
                        creator_rule: ''
                        
                        
                        pos_hint: {'top':1}
                    
                    # Creators List Section
                    BoxLayout: 
                        orientation: 'vertical'
                        size_hint: None, None
                        height: self.minimum_height
                        width: 322

                        spacing: 15

                        pos_hint: {'top':1}
                        
                        # Header
                        FloatLayout: 
                            size_hint: 1, None
                            height: 25

                            Label:
                                text: 'Follow To'
                                color: (0,0,0,1)
                                font_size: '20sp'
                                font_name: './assets/fonts/Roboto/Roboto-Regular.ttf'

                                size_hint: None, None
                                width: self.texture_size[0]
                                height: self.texture_size[1]


                                pos: self.parent.pos
                                pos_hint: {'center_y':.5}

                                text_size: None, None
                                valign: 'center'
                                halign: 'center'

                            Button:
                                id: view_all_btn
                                text: 'View All'
                                font_size: '13sp'
                                font_name: './assets/fonts/Roboto/Roboto-Regular.ttf'
                                color: (0,0,0 if self.state == 'normal' else 1,.5)

                                background_color: (0,0,0,0)
                                background_normal: ''

                                size_hint: None, None
                                width: self.texture_size[0]
                                height: self.texture_size[1]

                                pos: self.parent.pos
                                pos_hint: {'right': 1, 'center_y':.5}

                                #on_release: root.showMorePeople(self)

                                canvas.before:
                                    Color:
                                        rgba: (0,0,0,0 if self.state == 'normal' else .1)
                                    RoundedRectangle:
                                        size: [self.width+10, self.height+10]
                                        pos: [self.x - 10/2, self.y - 10/2]
                                        radius: [5]
                        
                        # Profile Card List Container
                        BoxLayout:
                            id: profile_card_container
                            orientation: 'vertical'

                            size_hint: 1, None
                            height: self.minimum_height

                            spacing: 15

                            #ProfileCard:
                            #ProfileCard:
                            #ProfileCard:
                            #ProfileCard:
        
        # Main Navigation Bar
        FloatLayout:
            size_hint: 1, None
            height: 87

            pos: self.parent.pos
            pos_hint: {'bottom':1}

            canvas.before:
                Color:
                    rgba: (1,1,1,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Barrier
            Button:
                background_color: (0,0,0,0)
                background_normal: ''

                pos: self.parent.pos
                size: self.parent.size

            BoxLayout:
                orientation: 'horizontal'
                pos: self.parent.pos
                pos_hint: {'top':1}

                padding: [20,0,20,0]

                size_hint_y: None
                height: 72

                NavBarButton:
                    icon: './assets/house.png'

                NavBarButton:
                    icon: './assets/magnify-glass.png'

                NavBarButton:
                    icon: './assets/currency-dollar.png'

                NavBarButton:
                    icon: './assets/user.png'
